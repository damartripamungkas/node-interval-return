{
  "name": "node-interval-return",
  "version": "1.2.7",
  "description": "A lightweight Node.js module that returns a promise-based interval, simplifying the execution of recurring tasks with flexible and reliable asynchronous control. Ideal for developers looking to manage intervals in a clean and efficient way.",
  "type": "commonjs",
  "scripts": {
    "test": "vitest --test-timeout=0",
    "build": "tsup",
    "start": "node ./dist/src/index.js",
    "publish:package": "npm run build && npm publish"
  },
  "homepage": "https://github.com/damartripamungkas/node-interval-return",
  "repository": {
    "type": "git",
    "url": "https://github.com/damartripamungkas/node-interval-return.git"
  },
  "keywords": [
    "setInterval",
    "setIntervalReturn",
    "set-interval",
    "set-interval-return",
    "timers",
    "timer",
    "interval-return",
    "recursive-return",
    "recursive-promise",
    "recursive-function",
    "nodejs",
    "denojs",
    "bunjs"
  ],
  "main": "./dist/src/index.js",
  "module": "./dist/src/index.mjs",
  "types": "./dist/src/index.d.ts",
  "files": [
    "dist"
  ],
