  "license": "MIT",
  "devDependencies": {
    "@types/node": "^22.7.5",
    "@typescript-eslint/eslint-plugin": "^8.9.0",
    "@typescript-eslint/parser": "^8.9.0",
    "eslint": "^9.12.0",
    "tsup": "^8.3.0",
    "vitest": "^2.1.3"
  }
